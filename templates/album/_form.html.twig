<div class="col-5 mx-auto">
    {{ form_start(form) }}
        {{ form_widget(form) }}
            <div class="form-group offset-2 col-8">
                {% if album.image %}
                    <img id="album-image" class="img-fluid" src="{{ asset('images/upload/' ~ ad.image) }}" alt="">
                {% else %}
                    <img id="album-image" class="img-fluid" src="{{ asset('images/default.png') }}" alt="">
                {% endif %}
            </div>
        <button class="btn btn-primary my-2 my-sm-0">{{ button_label|default('Enregistrer') }}</button>
    {{ form_end(form) }}
</div>
