<div class="col-9 mx-auto mt-4">
    <div class="card">
        <div class="card-header text-center">
            <h1>Gestion des articles</h1>
        </div>
        <div class="card-body">
            <div class="font-weight-bold d-flex justify-content-center">
                {{ form_start(form) }}
                <div class="form-group row">
                    <label for="Title" class="col-sm-2 col-form-label">{{ form_label(form.title) }}</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.title) }}
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Subject" class="col-sm-2 col-form-label">{{ form_label(form.subject) }} </label>
                    <div class="col-sm-10">
                        {{ form_widget(form.subject) }}
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Content" class="col-sm-2 col-form-label">{{ form_label(form.content) }}</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.content) }}
                    </div>
                </div>
                <div class="form-group row">
                    <label for="State" class="col-sm-2 col-form-label">{{ form_label(form.isPublished) }}</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.isPublished) }}
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Image" class="col-sm-2 col-form-label">{{ form_label(form.image) }} </label>
                    <div class="col-sm-10">
                        {{ form_widget(form.image) }}
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Theme" class="col-sm-2 col-form-label">{{ form_label(form.theme) }} </label>
                    <div class="col-sm-10">
                        {{ form_widget(form.theme) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center">
            <button type="button" class="btn btn-primary">Save</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>

