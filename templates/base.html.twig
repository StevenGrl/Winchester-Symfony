            <ul class="navbar-list">
                <li class="navbar-item">
                    <a href="{{ path('home') }}">Winchester</a>
                </li>
                <li class="navbar-item">
                    <a href="{{ path('dashboard') }}">Dashboard</a>
                </li>
                <li class="navbar-item">
